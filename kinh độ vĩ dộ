<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HuynhAn</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    
    <style>
        body {
            border: 5px solid;
            border-color: aqua;
            padding: 1px;
        }
        #map {
            height: 900px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        var map = L.map('map').setView([10.0465, 105.7679], 13);

        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        var universityLocation = L.latLng(10.0465, 105.7679); // Vị trí của trường Đại học Kỹ thuật - Công nghệ Cần Thơ

        // Tạo nội dung của popup
        var popupContent = '<div style="text-align:center;"><h3>Trường Đại học Kỹ thuật - Công nghệ Cần Thơ</h3><img src="logo.png" width="82" height="86" alt="Logo Trường"></div>';
        popupContent += '<p>Kinh độ: ' + universityLocation.lng.toFixed(5) + '</p>';
        popupContent += '<p>Vĩ độ: ' + universityLocation.lat.toFixed(5) + '</p>';

        // Tạo popup tại vị trí cụ thể và hiển thị nội dung
        L.popup()
            .setLatLng(universityLocation)
            .setContent(popupContent)
            .openOn(map);

        var OpenTopoMap = L.tileLayer('https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png', {
            maxZoom: 17,
            attribution: 'Map data: &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, <a href="http://viewfinderpanoramas.org">SRTM</a> | Map style: &copy; <a href="https://opentopomap.org">OpenTopoMap</a> (<a href="https://creativecommons.org/licenses/by-sa/3.0/">CC-BY-SA</a>)'
        });

        var baseLayers = {
            "Map": map,
            "OpenTopoMap": OpenTopoMap
        };

        L.control.layers(baseLayers).addTo(map);
    </script>
</body>
</html>
